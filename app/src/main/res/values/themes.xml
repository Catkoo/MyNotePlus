<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MyNotePlus" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Warna utama (Material 3 pakai nama baru) -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="onPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple_700</item>

        <!-- Splash screen support (Android 12+) -->
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/mynoteplus</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/white</item>
        <item name="android:windowSplashScreenDuration">200</item>
    </style>
</resources>
